<%= raw Setting.index_html %>

<div class="row home_headline_topics">
  <div class="col-md-4">
      <div>头条</div>
      <!-- Place somewhere in the <body> of your page -->
      <div class="flexslider">
        <ul class="slides">
          <% Topic.headline.each do |t| %>
            <li >
              <%= link_to(main_app.topic_path(t), title: t.title) do %>
                <img src="<%= t.cover %>" width="380" height="228" style=" height: 228px; overflow: hidden;"/>
                <%= t.title %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
  </div>

  <div class="col-md-8">
    <div>推荐阅读</div>
    <div>
      <% Topic.headline.each do |t| %>
        <div class="row">
          <img class="col-md-2" src="<%= t.cover %>" width="100" height="60" style=" height: 60px; overflow: hidden;"/>
          <%= link_to(main_app.topic_path(t), title: t.title, class: "col-md-10") do %>
            <%= t.title %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row home_excellent_topics">
    <div class="banner panel panel-default">
      <div class="panel-heading">精华</div>
      <div class="panel-body topics">
          <!-- Place somewhere in the <body> of your page -->
              <% Topic.headline.each do |t| %>
                <li>
                  <a><%= t.title %></a>
                </li>
              <% end %>
      </div>
    </div>
</div>

<% if !mobile? %>
  <%= render "/shared/index_sections" %>
<% end %>

<!-- Place in the <head>, after the three links -->
<script type="text/javascript" charset="utf-8">
  $(window).load(function() {
    $('.flexslider').flexslider();
  });
</script>
